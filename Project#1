	beq $t8, 5, UserInput25#ratio
	bgt $t8,5,IncorrectInput2
	blt $t8,1,IncorrectInput2
	
UserInput21:#Number of lectures (in hours)
	#iterate between all calendar lines, find lectures, start adding to $s0
